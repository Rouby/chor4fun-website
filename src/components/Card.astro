---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="choir-card">
	<a href={href}>
		<h3>{title}</h3>
		<p>{body}</p>
		<span class="link-arrow">Mehr erfahren â†’</span>
	</a>
</div>

<style>
	.choir-card {
		background: var(--card-bg);
		border-radius: 10px;
		overflow: hidden;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	.choir-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
	}

	.choir-card a {
		display: block;
		padding: 2rem;
		text-decoration: none;
		color: inherit;
	}

	h3 {
		font-size: 1.8rem;
		margin-bottom: 1rem;
		color: hsl(var(--primary));
		font-weight: 700;
	}

	p {
		line-height: 1.6;
		margin-bottom: 1rem;
		color: #555;
	}

	.link-arrow {
		display: inline-block;
		color: hsl(var(--primary));
		font-weight: 600;
		transition: transform 0.3s ease;
	}

	.choir-card:hover .link-arrow {
		transform: translateX(5px);
	}
</style>
