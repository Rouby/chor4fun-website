  .info-item {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 1.1rem;
  }

  .info-item:last-child {
    margin-bottom: 0;
  }

  .info-item strong {
    min-width: 80px;
    color: hsl(var(--primary));
  }

  .join-section p {
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 2rem;
  }

